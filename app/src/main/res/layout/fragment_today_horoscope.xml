<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_starsign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/amatic_sc"
            android:minHeight="10dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/lavander"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:indeterminateTint="@color/toolbar"
            />
        <TextView
            android:id="@+id/loadingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="italic"
            android:textSize="20sp"
          android:layout_gravity="center"
            android:visibility="visible"
            android:text="Connecting with the stars... "
            android:textColor="@color/lavander"
            />


        <ImageView
            android:id="@+id/iv_starsign"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:scaleType="fitCenter" />




        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/amatic_sc"
            android:minHeight="10dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_todaysHoroscope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/rajdhani"
            android:minHeight="100dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TableLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="5dp">

            <TableRow>

                <TextView
                    android:layout_width="150dp"
                    android:fontFamily="@font/amatic_sc"
                    android:padding="3dp"
                    android:text="Color"
                    android:textAlignment="textEnd"
                    android:textColor="@color/lavander"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="150dp"
                    android:fontFamily="@font/rajdhani"
                    android:padding="3dp"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:textStyle="italic" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="150dp"
                    android:fontFamily="@font/amatic_sc"
                    android:padding="3dp"
                    android:text="Lucky Number"
                    android:textAlignment="textEnd"
                    android:textColor="@color/lavander"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="150dp"
                    android:fontFamily="@font/rajdhani"
                    android:padding="3dp"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:textStyle="italic" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="150dp"
                    android:fontFamily="@font/amatic_sc"
                    android:padding="3dp"
                    android:text="Compatibility"
                    android:textAlignment="textEnd"
                    android:textColor="@color/lavander"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_compatibility"
                    android:layout_width="150dp"
                    android:fontFamily="@font/rajdhani"
                    android:padding="3dp"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:textStyle="italic" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="150dp"
                    android:fontFamily="@font/amatic_sc"
                    android:padding="3dp"
                    android:text="Lucky Time"
                    android:textAlignment="textEnd"
                    android:textColor="@color/lavander"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="150dp"
                    android:fontFamily="@font/rajdhani"
                    android:padding="3dp"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:textStyle="italic" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="150dp"
                    android:fontFamily="@font/amatic_sc"
                    android:padding="3dp"
                    android:text="Mood"
                    android:textAlignment="textEnd"
                    android:textColor="@color/lavander"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_mood"
                    android:layout_width="150dp"
                    android:fontFamily="@font/rajdhani"
                    android:padding="3dp"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:textStyle="italic" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</ScrollView>